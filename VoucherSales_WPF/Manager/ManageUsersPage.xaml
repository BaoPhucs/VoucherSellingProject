<UserControl x:Class="VoucherSales_WPF.Manager.ManageUsersPage"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
            xmlns:local="clr-namespace:VoucherSales_WPF.Manager"  
            mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Form nhập -->
            <RowDefinition Height="Auto" />
            <!-- Danh sách người dùng -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Form người dùng với Label + TextBox -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10" Background="#FFFAF08D">
            <Grid Margin="0,0,0,10" Background="#FF6AE9E9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Tên đăng nhập:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtUsername" Margin="5"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Mật khẩu:" VerticalAlignment="Center" Margin="5"/>
                <PasswordBox Grid.Row="0" Grid.Column="3" x:Name="txtPassword" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Họ tên:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtFullName" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Email:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtEmail" Margin="5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Số điện thoại:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtPhone" Margin="5"/>
                <Label Grid.Row="2" Grid.Column="2" Content="RoleID:" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <ComboBox x:Name="cmbRoleId" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="190"/>
            </Grid>
            <!-- KHUNG TÌM KIẾM -->

            <!-- Nút CRUD -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button Content="Thêm" Width="80" Margin="5" Click="btnAdd_Click"/>
                <Button Content="Sửa" Width="80" Margin="5" Click="btnUpdate_Click"/>
                <Button Content="Xoá" Width="80" Margin="5" Click="btnDelete_Click"/>
                <Button Content="Refresh" Width="80" Margin="5" Click="btnRefresh_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Danh sách người dùng -->
        <DataGrid x:Name="dgUsers" Grid.Row="1" AutoGenerateColumns="False" SelectionChanged="dgUsers_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding Username}" />
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" />
                <DataGridCheckBoxColumn Header="Kích hoạt" Binding="{Binding IsActive}" />
                <DataGridTextColumn Header="Role" Binding="{Binding RoleId}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
