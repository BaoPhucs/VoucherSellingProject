<Page x:Class="VoucherSales_WPF.Pages.CataloguePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Title="CataloguePage">

    <!-- Nếu chưa khai PrimaryButton ở App.xaml, bạn phải khai lại ở đây -->
    <Page.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters & Search -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch"
               Width="200" Height="30"
               Margin="0,0,10,0"/>
            <ComboBox x:Name="cbCategory"
                Width="150" Height="30"
                Margin="0,0,10,0"/>
            <ComboBox x:Name="cbLocation"
                Width="150" Height="30"
                Margin="0,0,10,0"/>
            <Button Content="Áp dụng"
              Width="80"
              Style="{StaticResource PrimaryButton}"
              Click="OnApplyFilters"/>
        </StackPanel>

        <!-- Voucher Grid -->
        <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="icVouchers">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="250"
                       ItemHeight="350"
                       Margin="0,10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="240" Height="340"
                    Margin="5"
                    Background="White"
                    CornerRadius="8"
                    Padding="10">
                            <StackPanel>
                                <Image Source="{Binding ImagePath}"
                       Height="140"
                       Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Name}"
                           FontWeight="Bold"
                           Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding ShortDescription}"
                           TextWrapping="Wrap"
                           FontSize="12"
                           Height="40"/>
                                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">
                                    <TextBlock Text="{Binding DiscountedPrice, StringFormat=C}"
                             FontWeight="Bold"/>
                                    <TextBlock Text="  "/>
                                    <TextBlock Text="{Binding OriginalPrice, StringFormat=C}"
                             TextDecorations="Strikethrough"
                             Foreground="Gray"/>
                                </StackPanel>
                                <Button Content="Xem chi tiết"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,10,0,0"
                        Click="OnViewDetail"
                        Tag="{Binding}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
