<Window x:Class="VoucherSales_WPF.OrderDetailWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Order Details" Height="400" Width="600" WindowStartupLocation="CenterOwner">
   <Grid Margin="10">
       <StackPanel Margin="0,10,0,0">
           <TextBlock Text="{Binding OrderInfo}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Height="73"/>
           <DataGrid x:Name="OrderItemGrid"
                     RowEditEnding="OrderItemGrid_RowEditEnding"
                     AutoGenerateColumns="False"
                     CanUserAddRows="True"
                     CanUserDeleteRows="True"
                     IsReadOnly="False"
                     Height="230"
                     ItemsSource="{Binding OrderItems}" Loaded="OrderItemGrid_Loaded">
               <DataGrid.Columns>
                   <DataGridTextColumn Header="Item ID" Binding="{Binding OrderItemId}" IsReadOnly="True"/>
                   <DataGridTextColumn Header="Voucher Type" Binding="{Binding VoucherTypeId}"/>
                   <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                   <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}"/>
                   <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" IsReadOnly="True"/>
               </DataGrid.Columns>
           </DataGrid>
           <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
               <Button Content="Delete Item" Width="100" Margin="0,0,10,0" Click="DeleteItem_Click"/>
               <Button Content="Close" Width="46" Click="Close_Click"/>
           </StackPanel>
       </StackPanel>
   </Grid>
</Window>
