<Page x:Class="VoucherSales_WPF.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OrdersPage">

    <Grid Margin="20">
        <TextBlock Text="Lịch sử đơn hàng"
               FontSize="20" FontWeight="Bold"
               Margin="0,0,0,10"/>

        <!-- Thêm ItemsSource và sửa binding ngày cho đúng -->
        <DataGrid x:Name="dgOrders"
              Margin="0,40,0,0"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              ItemsSource="{Binding Orders}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID"
                            Binding="{Binding OrderId}"
                            Width="80"/>
                <!-- Nếu trong Order class bạn có CreatedAt, bind tới nó -->
                <DataGridTextColumn Header="Ngày"
                            Binding="{Binding OrderDate, StringFormat={}{0:dd/MM/yyyy}}"
                            Width="120"/>
                <DataGridTextColumn Header="Tổng"
                            Binding="{Binding TotalAmount, StringFormat=C}"
                            Width="100"/>
                <DataGridTextColumn Header="Trạng thái"
                            Binding="{Binding PaymentStatus}"
                            Width="100"/>
                <DataGridTemplateColumn Header="Chi tiết" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem"
                      Tag="{Binding OrderId}"
                      Click="OnViewOrderDetail"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
