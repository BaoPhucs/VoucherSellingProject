<Page x:Class="VoucherSales_WPF.Pages.VoucherDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VoucherSales_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VoucherDetailPage">
    <Page.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background"     Value="#0078D7"/>
            <Setter Property="Foreground"     Value="White"/>
            <Setter Property="FontWeight"     Value="SemiBold"/>
            <Setter Property="Padding"        Value="8,4"/>
            <Setter Property="Margin"         Value="0,15,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"         Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ảnh / Demo placeholder -->
        <Border Grid.Column="0" Background="#EEE" CornerRadius="8" Padding="10">
            <Image Source="{Binding SelectedVoucher.ImagePath}" 
             Stretch="Uniform" />
        </Border>

        <!-- Thông tin chi tiết ở cột phải -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top" Height="410">
            <TextBlock Text="{Binding SelectedVoucher.Name}" 
                 FontSize="24" FontWeight="Bold" />
            <TextBlock Text="{Binding SelectedVoucher.Category}" 
                 FontStyle="Italic" Foreground="#666" Margin="0,5,0,10"/>

            <TextBlock Text="Description:" FontWeight="SemiBold" />
            <TextBlock Text="{Binding SelectedVoucher.Description}" 
                 TextWrapping="Wrap" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Valid:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SelectedVoucher.ValidFrom, StringFormat=\{0:yyyy-MM-dd\}}"
                   Margin="5,0"/>
                <TextBlock Text="–"/>
                <TextBlock Text="{Binding SelectedVoucher.ValidTo, StringFormat=\{0:yyyy-MM-dd\}}"
                   Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Location:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SelectedVoucher.Location}" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                <TextBlock Text="Price:" FontWeight="SemiBold" FontSize="16"/>
                <TextBlock Text="{Binding SelectedVoucher.DiscountValue, StringFormat=C}" 
                   FontSize="16" Foreground="{StaticResource PrimaryBrush}" Margin="5,0"/>
                <TextBlock Text="{Binding SelectedVoucher.MinOrderValue, StringFormat= (Min order {0:C})}" 
                   Margin="10,0" Foreground="#666"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,10" VerticalAlignment="Center">
                <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="50"
             Text="{Binding SelectedQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             HorizontalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Button Content="Add to Cart"
                Style="{StaticResource PrimaryButton}"
                Width="120"
                Click="OnAddToCart" Margin="10,0,30,0" Height="16"/>
                <Button Content="Buy Now"
                Style="{StaticResource PrimaryButton}"
                Width="120"
                Click="OnBuyNow" Margin="0,0,30,0" Height="16"/>
                <Button Content="← Back to Catalogue"
                Style="{StaticResource PrimaryButton}"
                Width="120"
                Click="OnBackToCatalogue" Height="15.96" Margin="0,100,10,10"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
