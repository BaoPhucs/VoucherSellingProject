<Page x:Class="VoucherSales_WPF.Pages.VoucherUsePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VoucherSales_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VoucherUsePage">
    <Page.Resources>
        <!-- reuse style PrimaryButton như trong PaymentPage -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0"
               Text="Use Vouchers"
               FontSize="24" FontWeight="Bold"
               Margin="0,0,0,10"/>

        <!-- Danh sách actual Voucher codes -->
        <DataGrid Grid.Row="1"
              ItemsSource="{Binding Vouchers}"
              AutoGenerateColumns="False"
              CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select"
                                Binding="{Binding IsSelected, Mode=TwoWay}"
                                Width="60"/>
                <DataGridTextColumn Header="Code"
                            Binding="{Binding Code}"
                            Width="*"/>
                <DataGridTextColumn Header="Valid To"
                            Binding="{Binding VoucherType.ValidTo, StringFormat={}{0:yyyy-MM-dd}}"
                            Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút Confirm & Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Confirm Use"
              Style="{StaticResource PrimaryButton}"
              Click="OnConfirmUse"
              Width="120"/>
            <Button Content="Cancel"
              Margin="10,0,0,0"
              Click="OnCancel"
              Width="80"/>
        </StackPanel>
    </Grid>
</Page>